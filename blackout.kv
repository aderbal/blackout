ScreenManagement:

    Login:

    Destrava:

<Login>:

    name: "Login"

    BoxLayout:

        orientation: "vertical"

        TextInput:
            id: spaces
            background_color: 0,0,0,0
            foreground_color: 0,1,255,0.7
            size_hint_y: None
            height: dp(200)
            disabled: True

        BoxLayout:

            orientation: "horizontal"

            size_hint_y: None
            height: dp(30)

            TextInput:
                background_color: 0,0,0,0
                foreground_color: 0,1,255,0.7
                disabled: True

            TextInput:
                id: login
                hint_text: "Usu√°rio"
                background_color: 1,1,1,1
                font_size: 25
                multiline: False
                size_hint_y: None
                height: root.h

            TextInput:
                background_color: 0,0,0,0
                foreground_color: 0,1,255,0.7
                disabled: True

        TextInput:
            background_color: 0,0,0,0
            foreground_color: 0,1,255,0.7
            size_hint_y: None
            height: dp(30)
            disabled: True

        BoxLayout:

            orientation: "horizontal"

            size_hint_y: None
            height: dp(30)

            TextInput:
                background_color: 0,0,0,0
                foreground_color: 0,1,255,0.7
                disabled: True

            TextInput:
                id: passw
                hint_text: "Senha"
                background_color: 1,1,1,1
                font_size: 25
                multiline: False
                password: True
                size_hint_y: None
                height: root.h

            TextInput:
                background_color: 0,0,0,0
                foreground_color: 0,1,255,0.7
                disabled: True

        TextInput:
            background_color: 0,0,0,0
            foreground_color: 0,1,255,0.7
            size_hint_y: None
            height: dp(30)
            disabled: True

        BoxLayout:

            orientation: "horizontal"

            size_hint_y: None
            height: dp(60)

            TextInput:
                background_color: 0,0,0,0
                foreground_color: 0,1,255,0.7
                disabled: True

            TextInput:
                id: msg
                background_color: 0,0,0,0
                foreground_color: 0,1,255,0.7
                enabled: False

            TextInput:
                background_color: 0,0,0,0
                foreground_color: 0,1,255,0.7
                disabled: True

        TextInput:
            background_color: 0,0,0,0
            foreground_color: 0,1,255,0.7
            disabled: True

        BoxLayout:

            orientation: "vertical"

            size_hint_y: None
            height: dp(30)

        BoxLayout:

            size_hint_y: None

            height: dp(45)

            Button:
                text: "Sair"
                on_release: app.get_running_app().stop()

            Button:
                text: "Login"
                on_release: root.login()

<Destrava>:

    name: "Destrava"

    BoxLayout:

        orientation: "vertical"

        ZBarCam:
            id: zbarcam
            code_types: "qrcode", "ean13"
            size_hint_y: None
            height: dp(0)

        TextInput:
            background_color: 0,0,0,0
            foreground_color: 0,1,255,0.7
            disabled: True
            size_hint_y: None
            height: dp(5)

        TextInput:
            id: texto
            hint_text: "Texto"
            text: root.zbar(zbarcam=zbarcam, symbols=zbarcam.symbols)
            background_color: 1,1,1,1
            font_size: 25
            multiline: False
            size_hint_y: None
            height: root.h
            on_text: root.text(self.text)

        TextInput:
            background_color: 0,0,0,0
            foreground_color: 0,1,255,0.7
            disabled: True
            size_hint_y: None
            height: dp(5)

        TextInput:
            id: msg
            background_color: 1,1,1,1
            #font_name: 'courbd'
            font_size: 28
            disabled: True

        TextInput:
            background_color: 0,0,0,0
            foreground_color: 0,1,255,0.7
            disabled: True
            size_hint_y: None
            height: dp(5)

        BoxLayout:

            size_hint_y: None

            height: dp(45)

            Button:
                text: "QRCode"
                on_release: root.qrc(zbarcam=zbarcam, h=dp(250))

            Button:
                text: "Leitura"
                on_release: root.leitura()

            Button:
                text: "Destrava"
                on_release: root.destrava()

            Button:
                text: "Sair"
                on_release: app.get_running_app().stop()
